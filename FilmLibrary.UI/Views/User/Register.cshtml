@model FilmLibrary.Models.Models.CredentialsModel
 
<h2>Registration</h2>
 
<form asp-action="Register" asp-controller="User" asp-anti-forgery="true">
    <div class="validation" asp-validation-summary="ModelOnly"></div>
    <div>
        <div>
            <label style="width: 150px; margin-bottom:20px" asp-for="UserName">Enter login</label>
            <input type="text" asp-for="UserName" />
            <span asp-validation-for="UserName" />
        </div>
        <div>
            <label style="width: 150px; margin-bottom:20px" asp-for="Password">Enter password</label>
            <input type="password" asp-for="Password" />
            <span asp-validation-for="Password" />
        </div>
        <div>
            <input type="submit" value="Sign up" class="btn btn-outline-dark"/>
        </div>
    </div>
</form>