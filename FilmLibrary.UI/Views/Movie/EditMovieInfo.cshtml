@model FilmLibrary.Models.Models.UpdateMovieModel
 
<h2 style="margin-bottom:30px">Edit movie info</h2>

<form asp-action="EditMovieInfo" asp-controller="Movie" asp-anti-forgery="true">
    <div class="validation" asp-validation-summary="ModelOnly"></div>
    <div>
        <div class="form-group">
            <label style="margin-bottom: 20px; width:120px" asp-for="Description">Description</label>
            <input type="text" asp-for="Description"  value="@Model.Description" required/>
            <span asp-validation-for="Description" />
        </div>
        <div class="form-group">
            <label style="margin-bottom: 20px; width:120px" asp-for="Articul">Articul</label>
            <input type="text" asp-for="Articul"  value="@Model.Articul" required/>
            <span asp-validation-for="Articul" />
        </div>
        <div>
            <label style="margin-bottom: 20px" asp-for="GenresId">Choose genres</label>
            <select multiple asp-for="GenresId" asp-items="ViewBag.GenresId"></select>
        </div>
        <div>
            <label style="margin-bottom: 20px" asp-for="ArtistsId">Choose artists</label>
            <select multiple asp-for="ArtistsId" asp-items="ViewBag.ArtistsId"></select>
        </div>
        <div class="form-group">
            <input type="submit" value="Edit" class="btn btn-outline-dark" />
        </div>
        <div class="form-group">
            <input type="hidden" asp-for="Name" value="@Model.Name" />
            <span asp-validation-for="Name" />
        </div>
    </div>
</form>

<div style="margin-top:30px; margin-left:10px"><a style="color:chocolate" asp-controller="Home" asp-action="LaunchStartPage">Back</a></div>